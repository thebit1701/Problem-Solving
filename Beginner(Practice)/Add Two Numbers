#include<iostream>
using namespace std;

int main()
{
    int i=1 , n , sum=0 , A[i];
    cout<<"Enter value of n : ";
    cin>>n;
    cout<<"Enter values to be added ";
    for(i=1;i<=n;i++)
    {
        cin>>A[i];
    }
    
    for(i=1;i<=n;i=i+2)
    {
        sum=A[i]+A[i+1];
        cout<<sum<<endl;
    }
    return 0;
}
